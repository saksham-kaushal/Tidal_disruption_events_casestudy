@article{magorrian_rates_1999,
	title = {Rates of tidal disruption of stars by massive central black holes},
	volume = {309},
	issn = {0035-8711, 1365-2966},
	url = {https://academic.oup.com/mnras/article-lookup/doi/10.1046/j.1365-8711.1999.02853.x},
