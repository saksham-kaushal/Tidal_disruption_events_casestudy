	number = {1},
	journaltitle = {The Astrophysical Journal},
	shortjournal = {{ApJ}},
	author = {Krolik, Julian H. and Piran, Tsvi},
	urldate = {2021-03-16},
	date = {2012-04-10},
	langid = {english},
	file = {Krolik and Piran - 2012 - JETS FROM TIDAL DISRUPTIONS OF STARS BY BLACK HOLE.pdf:/home/saksham/Zotero/storage/C4SST7EA/Krolik and Piran - 2012 - JETS FROM TIDAL DISRUPTIONS OF STARS BY BLACK HOLE.pdf:application/pdf}
}

@article{lunardini_high_2017,
